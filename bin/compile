#!/bin/sh

indent() {
  sed -u 's/^/       /'
}

echo "Setting up Plex Preferences!"
cp -Rf $1/PlexLibrary/* $1/Library

cd $1/Library/Application\ Support/Plex\ Media\ Server/Plug-ins
git clone https://github.com/coder-alpha/CcloudTv.bundle.git

# if hello.txt is empty, abort the build
if [ ! -s $1/hello.txt ]; then
  echo "hello.txt was empty" | indent
  exit 1
fi

# replace hello with goodbye in a new file
cat $1/hello.txt | sed -e "s/[Hh]ello/Goodbye/g" > $1/goodbye.txt
# ./docker-latest -d
